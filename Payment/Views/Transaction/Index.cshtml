@model Payment.Models.FileUploadModel
@{
    ViewData["Title"] = "Payment Transaction";
}

<h1>Payment Transaction</h1>
<div class="container">
    <h4 class="p-1 mb-3 font-weight-bold">UPLOAD (.csv or .xml)</h4>
    <br />
    <form asp-action="Index" asp-controller="FileUpload" enctype="multipart/form-data">
        <h6 class="mt-3">Select File:</h6>
        <div class="form-group">
            <div class="input-group">
                <div class="custom-file">
                    <input asp-for="FileUpload" class="custom-file-input">
                    <label class="custom-file-label">Choose file</label>
                </div>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">Upload</button>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

